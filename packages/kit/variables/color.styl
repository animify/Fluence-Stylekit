$color = {
    base: #0050ff,
    red: #f34363,
    orange: #ff8842,
    yellow: #ffbe2b,
    green: #14d461,
    blue: #35b9f9,
    purple: #8d62ec,
    pink: #ff4ccd,
    black: #000000,
    gunmetal: #1F2023,
    slate: #5B5F63,
    silver: #767c7f,
    smoke: #929a9c,
    dim: #E9EDF0,
    snow: #f4f6f7,
    white: #ffffff
};
$textColor = {
    heading: $color.gunmetal,
    body: $color.slate,
    light: $color.silver,
    disabled: $color.smoke
};
$uiColor = {
    positive: $color.green,
    negative: $color.red,
    info: $color.blue,
    warning: $color.yellow
};
$borderColor = {
    info: lighten($color.blue, 10%),
    warning: lighten($color.yellow, 10%),
    important: lighten($color.red, 10%),
    success: lighten($color.green, 10%)
};
