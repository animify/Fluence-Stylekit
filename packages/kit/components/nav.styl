aside.sidenav
    @extend .pv5;
    background-color: $color.white;
    border-right: 1px solid $color.dim;
    fixed: left top;
    height: 100%;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-content: space-between;

    ul.list
        li
            @extend .ph5;

            & + li
                @extend .mt5;

            & > a
                svg
                    color: $textColor.body;

                &:hover svg
                    color: $textColor.heading;

            &.active
                a svg
                    color: $color.base;

    .account
        display: flex;
        justify-content: center;

        img
            height: 32px;
            width: 32px;
            border-radius: $borderRadius.circle;
            box-shadow: 0 0 0 2px $color.dim;