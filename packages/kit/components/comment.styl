.comments
    display: flex;
    flex-direction: column;

    .new
        .avatar
            margin-right: 2.4rem;
            height: 0;

            img
                max-width: 4.4rem;
                max-height: 4.4rem;
                border-radius: $borderRadius.circle;

        .entry
            padding-left: 6.8rem;

            .input
                textarea
                    max-width: 40rem;

    .comment
        .by
            display: flex;
            flex-direction: row;
            flex-basis: 100%;

            .avatar
                img
                    max-width: 3.2rem;
                    max-height: 3.2rem;
                    border-radius: $borderRadius.circle;

        .text
            display: flex;
            padding-left: 4.8rem;

        .actions
            display: flex;
            padding-left: 4.8rem;